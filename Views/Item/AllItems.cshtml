@model List<Item>
  
<div class="ViewSize">
  <h3>Support a Project!</h3><br>
  @foreach(var item in Model)
  {
  <div class="card border-primary mb-3 " style="max-width: 20rem;">
    <div class="card-body  ">
      <a asp-action="ShowProject" asp-controller="Item" asp-route-id="@item.ItemId">
        <h4 style="color:#02b875; text-align:center;" class="card-title">@item.Name</h4>
        <img src="@item.ImageURL" alt="image" style="width: 18rem">
      </a>
      <br>
      <p class="card-text">@item.Description</p>
    </div>
  </div>
  }
</div>