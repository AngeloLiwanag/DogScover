@model Item

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/litera/bootstrap.min.css">
    <style>
        .col {
            display: inline-block;
            margin-left: auto;
            margin-right: auto;
        }

        body {
            margin-left: auto;
            margin-right: auto;
            height: 100vh;
        }
    </style>


    <div class="text-center">
        <h2>@Model.Name</h2>
        <br>
    </div>
    <section class="main text-center">
        <div class="d-inline-block">
            <img src="@Model.ImageURL" alt="product">
        </div>
        <div class="d-inline-block">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                    aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%"></div>
            </div>
            <p></p>
            <p></p>
            <p>@Model.FundingGoal</p>
            <button class="btn btn-success">Back This Project</button>
            <button class="btn btn-success">Favorite this Item</button>
        </div>
        <hr>
        <div class="row">
            <div class="card text-white bg-success mb-3 col" style="max-width: 20rem;">
                <div class="card-body">
                    <h4 class="card-title">@Model.Brand</h4>
                    <p class="card-text">About the company, mission statement</p>
                </div>
            </div>
        </div>
        <hr>
    </section>
    <section>
        <h4>About</h4>
        <p>@Model.Description</p>
    </section>
    <section>
        <p>Partials goes here but not working for some reason?</p>
    </section>
    @if(@Model.UserId == ViewBag.SessionId)
    {
    <div class="row">
        <div class="">
            <button class="btn btn-outline-success" ><a style="color:black;" asp-action="Delete" asp-controller="Item" asp-route-id="@Model.ItemId">Delete Your Starter?</a></button>
        </div>
       <div class="">
            <button class="btn btn-outline-success" ><a style="color:black;" asp-action="UpdateProject" asp-controller="Item" asp-route-id="@Model.ItemId">Update Your Project</a></button>
        </div>
    </div>
    }
